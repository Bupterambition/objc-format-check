#!/usr/bin/env bash
# ~/.git_template.local/hooks/pre-commit
# format-objc-hook
# pre-commit hook to check if any unformatted Objective-C files would be committed. Fails the check if so, and provides instructions.
#
# Copyright 2015 Square, Inc

IFS=$'\n'
export CDPATH=""
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
source "$DIR"/lib/common-lib.sh

# Don't do anything unless a .clang-format file exists
[ -e ".clang-format" ] || exit 0

objc_files=$(objc_files_to_format "$1")
[ -z "$objc_files" ] && exit 0
# echo $objc_files
function format_objc() {
  success=0
  for file in $objc_files; do
    FILE=$file;
    if [ "${FILE#*.}" = "swift" ]
    then
        swift=1
        python "$DIR"/SwiftFormat/format.py --file "$file" --output "$file"
        success=1
    fi
  done

  for file in $objc_files; do
    FILE=$file;
    if [ "${FILE#*.}" != "swift" ]
    then
        difference=$("$DIR"/format-objc-file-dry-run.sh "$file" | diff "$file" - | wc -l)
        if [ $difference -gt 0 ]; then
          if [ $success -eq 0 ]; then
            # echo -e "ğŸš¸ Format and stage individual files:"
            echo -e "ğŸš¸ ä»¥ ä¸‹ æ–‡ ä»¶ çš„ ä»£ ç  æ ¼ å¼ å­˜ åœ¨ é—® é¢˜:"
          fi
          "$DIR"/format-objc-file.sh "$file" 
          # This is what the dev can run to fixup an individual file
          # echo "\"$DIR\"/format-objc-file.sh '$file' && git add '$file';"
          echo "$file"
          success=1
        fi
    fi
  done
  if [ $success -gt 0 ]; then
      (echo -e "\nğŸ”´ ğŸ‘†ä»¥ ä¸Š ä»£ ç  é£ æ ¼ å·² ç» è‡ª åŠ¨ ä¿® å¤ è¯· é‡ æ–° commitğŸ‘†ğŸ”´" && success=1)
  fi
  # if [ $success -gt 0 ] && [ $swift -eq 0 ]; then
  #     echo -e "\nğŸš€  Format and stage all affected files:\n\t \"$DIR\"/format-objc-files.sh -s"
  #     (echo -e "\nğŸ”´  æ‚¨ æ äº¤ çš„ ä»£ ç  é£ æ ¼ ä¸ ç¬¦, è¯· Gitæ ¹ç›®å½• ä¸‹ è¿è¡ŒğŸ‘† ä¸Šé¢ğŸ‘† æŒ‡ä»¤ ä¿®å¤.\nğŸ’”  æˆ– æ˜¯ æ‚¨ å¯ ä»¥ ä½¿ ç”¨ git commit --no-verify å¼º åˆ¶ è·³ è¿‡" && success=1)
  # fi
  # if [ $success -gt 0 ] && [ $swift -eq 1 ]; then
  #     echo -e "\nğŸš€  Format and stage all affected files:\n\t \"$DIR\"/format-objc-files.sh -s"
  #     (echo -e "\nğŸ”´  æ‚¨ æ äº¤ çš„ ä»£ ç  é£ æ ¼ ä¸­ å«æœ‰ swift, è¯· æ‚¨ ä½¿ ç”¨ git commit --no-verify å¼º åˆ¶ è·³ è¿‡" && success=1)
  #     success=0
  # fi
  return $success 
}
success=0
swift=0
format_objc
orgin=`git rev-parse --show-toplevel`

if [[ $DIR != $orgin ]]; then
  cd $orgin
  git add -u
fi
exit $success
